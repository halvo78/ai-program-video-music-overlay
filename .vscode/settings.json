{
  // ═══════════════════════════════════════════════════════════════════════════════
  // CURSOR IDE - COMPLETE WORKSPACE SETTINGS
  // Unified AI Video Creation Platform
  // ═══════════════════════════════════════════════════════════════════════════════

  // === CURSOR CLOUD SYNC ===
  "cursor.cloud.enabled": true,
  "cursor.cloud.sync": {
    "workspace": true,
    "settings": true,
    "extensions": false,
    "keybindings": true,
    "snippets": true
  },
  "cursor.cloud.agents": {
    "enabled": true,
    "distributed": true,
    "autoScale": true
  },

  // === EDITOR CORE ===
  "editor.fontSize": 16,
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.6,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 80,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "strings": true,
    "comments": false,
    "other": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "editor.rulers": [88, 100],
  "editor.defaultFormatter": "charliermarsh.ruff",

  // === WORKBENCH ===
  "workbench.startupEditor": "none",
  "workbench.editor.showTabs": "multiple",
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 16,
  "workbench.editor.labelFormat": "short",
  "workbench.settings.enableNaturalLanguageSearch": true,

  // === TERMINAL ===
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}",
    "LOG_LEVEL": "INFO",
    "MEDIA_OUTPUT_DIR": "${workspaceFolder}/output",
    "GENERATED_DIR": "${workspaceFolder}/generated"
  },

  // === FILES ===
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/node_modules": true,
    "**/.git": false,
    "**/.venv": true,
    "**/venv": true,
    "**/output": false,
    "**/temp": false,
    "**/generated": false
  },
  "files.associations": {
    "*.env": "dotenv",
    "*.env.*": "dotenv",
    "Dockerfile*": "dockerfile",
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "*.mp4": "plaintext",
    "*.avi": "plaintext",
    "*.mov": "plaintext",
    "*.mp3": "plaintext",
    "*.wav": "plaintext"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/output/**": true,
    "**/temp/**": true,
    "**/generated/**": true
  },

  // === PYTHON ===
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/Scripts/python.exe",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.ruffEnabled": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.rulers": [88, 100]
  },

  // === RUFF ===
  "ruff.enable": true,
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "ruff.lint.enable": true,
  "ruff.format.args": ["--line-length=100"],

  // === TYPESCRIPT/JAVASCRIPT ===
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // === PRETTIER ===
  "prettier.enable": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "prettier.trailingComma": "es5",

  // === GIT ===
  "git.openRepositoryInParentFolders": "always",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.defaultCloneDirectory": "C:\\dev\\projects",

  // === GITLENS ===
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",

  // === SEARCH ===
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/__pycache__": true,
    "**/.venv": true,
    "**/output": false,
    "**/temp": false,
    "**/generated": false
  },

  // === CURSOR SPECIFIC ===
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.rpcFileLogger.enabled": true,

  // === ERROR LENS ===
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.messageMaxChars": 100,

  // === TODO TREE ===
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "HACK",
    "BUG",
    "MEDIA",
    "OVERLAY",
    "SYNC",
    "AGENT",
    "API",
    "WORKFLOW"
  ],

  // === YAML ===
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // === JSON ===
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // === MARKDOWN ===
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // === SECURITY ===
  "security.promptForLocalFileProtocolHandling": false,

  // === PERFORMANCE ===
  "workbench.layoutControl.enabled": false,

  // === EXTENSIONS ===
  "extensions.ignoreRecommendations": false
}
